#!/usr/bin/env node
var program = require('commander');
var _ = require('underscore');
var chengyu = require('../lib/chengyu.js');

program
  .version('0.0.1')
  .option('-p, --pattern [pattern]', 'chengyu followed this pattern, like AABB ABCC etc...')
  .option('-e, --exact [exact]', 'chengyu followed this order, like 一xxx xx必x')
  .option('-i, --include [include]', 'chengyu include the word, like 分')
  .option('--all', 'list all the chengyu')
  .parse(process.argv);

if (program.pattern) {
    chengyu.listByPattern(program.pattern);
    process.exit(0);
}

if (program.exact) {
    console.log('exact');
    process.exit(0);
}

if (program.all) {
    chengyu.listAll();
    process.exit(0);
}


if (program.include) {
    console.log('include');
    process.exit(0);
}